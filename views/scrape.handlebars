<!-- The navbar is outside the container so it bleeds all the way to edge -->
<nav class="navbar navbar-expand-sm  navbar-light bg-light">
  <!-- Brand  -->
  <a class="navbar-brand" href="/">Mongo Scraper</a>
  <!-- Toggler/collapsible button -->
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <!-- Navigation Menu -->
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <button type="submit" class="btn btn-form raised btn-lg mt-4" id="clear-btn"><span
            class="fa fa-fire"></span>Clear Saved Articles</button>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/">Home</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/scrape"><strong>Scrape Articles </strong></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/show">Show Saved Articles</a>
      </li>
    </ul>
  </div>
</nav>
<div id="wrapper">
  <h1>Scraped Articles</h1>
  <div id="articles">
    {{#each news_items}}
    <div class="mt-4 mb-4">
      <p><strong>TITLE:</strong> {{title}} <br /> <strong>SUMMARY:</strong> {{summary}} <br /><strong> LINK:</strong>
        {{link}}</p>
      <button type="submit" class="btn btn-form save-article-btn raised btn-lg mb-4" data-t='{{title}}'
        data-l='{{link}}' data-s='{{summary}}'><span class="fa fa-fire"></span>Save
        Article</button>
    </div>
    {{/each}}
  </div>
  <div id="notes"></div>
</div>