<!-- The navbar is outside the container so it bleeds all the way to edge -->
<nav class="navbar navbar-expand-sm  navbar-light bg-light">
  <!-- Brand  -->
  <a class="navbar-brand" href="/">Mongo Scraper</a>
  <!-- Toggler/collapsible button -->
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <!-- Navigation Menu -->
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <button type="submit" class="btn btn-form raised btn-lg mt-4" id="clear-btn"><span
            class="fa fa-fire"></span>Clear Saved Articles</button>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/scrape">Scrape Articles</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/show"><strong>Show Saved Articles </strong></a>
      </li>
    </ul>
  </div>
</nav>
<div id="wrapper">
  <h1>Saved Articles</h1>
  <div id="articles">
    {{#each news_items}}
    <div class="mt-4 mb-4">
      <p><strong>TITLE:</strong> {{title}} <br /> <strong>SUMMARY:</strong> {{summary}} <br /><strong> LINK:</strong>
        <a href={{link}} target="_blank">{{link}}</a></p>
      <button type="submit" class="btn btn-form delete-article-btn raised btn-lg mb-4" data-t='{{title}}'
        data-l='{{link}}' data-s='{{summary}}' data-i='{{_id}}'><span class="fa fa-fire"></span>Delete
        Article</button>
      <button type="submit" class="btn btn-form add-note-btn raised btn-lg mb-4" data-t='{{title}}' data-l='{{link}}'
        data-s='{{summary}}' data-id='{{_id}}'><span class="fa fa-fire"></span>Add
        Note</button>
    </div>
    {{/each}}
  </div>

  {{!-- modal to add note --}}
  <div id="notes"></div>
  <div class="modal fade" role="dialog" id="add-note-modal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div id="noteId"> </div>
        <form>
          <div class="form-group">
            <label  for="summary">New Note</label>
            <textarea class="form-control" id="note-summary" rows="4" placeholder="Enter your note here"></textarea>
          </div>
          <button type="submit" class="btn btn-form" id="place-submit">Submit</button>
        </form>
      </div>
    </div>
  </div>



</div>